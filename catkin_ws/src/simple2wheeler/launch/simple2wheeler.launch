<launch>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find simple2wheeler)/world/simple2wheeler.world"/>
        <!-- 
        <arg name="world_name" value="~/git/attemarkula/ROS/src/catkin_ws/src/simple2wheeler/world/simple2wheeler.world"/>
        -->
        <arg name="gui" value="true"/>
    </include>
    
    <!--
    -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find simple2wheeler)/urdf/simple2wheeler.xacro'"/>

   
   <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model simple2wheeler"/>
    <!--
    siirros xyz suuntaan:
        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model simple2wheeler -x 3 -y 3 -z 3"/>
    --> 

    <!-- luento6 -->
    <node pkg="turtlesim" type="turtle_teleop_key" name="cmd_vel">

    <!-- tämä ohjaa uuteen paikkaan jotta helpompi ohjata muillakin tavoilla -->
    <remap from="/turtle1/cmd_vel" to="cmd_vel" />
    </node>
</launch>
